<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/id_pop_layout"
    android:background="@color/c_a8_0"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gift_recycleview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@color/c_f"
        android:dividerHeight="1dp">

    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_below="@+id/gift_recycleview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_5c_f"/>
    <RelativeLayout
        android:layout_below="@+id/gift_recycleview"
        android:padding="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_f"
                android:textSize="@dimen/f_14"
                android:text="余额:"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_marginLeft="@dimen/d_10"
                android:textColor="@color/c_f"
                android:textSize="@dimen/f_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88趣币"/>
            <TextView
                android:id="@+id/tv_top_up"
                android:layout_marginLeft="@dimen/d_10"
                android:textColor="@color/c_orange"
                android:textSize="@dimen/f_14"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/ic_into"
                android:text="充值"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_gift_no"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/c_4c_f"
                android:background="@drawable/bg_gift_no"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:numeric="integer"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:id="@+id/tv_send"
                android:gravity="center"
                android:background="@drawable/bg_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f_13"
                android:textColor="@color/c_3"
                android:text="赠送"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>